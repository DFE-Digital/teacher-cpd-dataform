config {
    type: "table",
    assertions: {
        uniqueKey: ["school_cohort_id"]
    },
    bigquery: {
        partitionBy: "DATE(created_at)",
        clusterBy: ["cohort"]
    },
    description: "",
    columns: {
        school_cohort_id: "ID of school cohort record"
    }
}

WITH
  ecf_school_cohorts AS (
  SELECT
    id AS school_cohort_id,
    school_id,
    cohort_id,
    induction_programme_choice,
    default_induction_programme_id,
    created_at,
    updated_at,
    appropriate_body_id
  FROM
    ${ref(`school_cohorts_latest_cpd`)}),
  ecf_cohorts AS (
  SELECT
    id AS ecf_cohort_id,
    start_year AS cohort
  FROM
    ${ref(`cohorts_latest_cpd`)}),
  ecf_schools_latest AS (
  SELECT
    id AS ecf_school_id,
    name AS school_name,
    urn AS school_urn
  FROM
    ${ref(`schools_latest_cpd`)}),
  ecf_full_schools AS(
  SELECT
    * EXCEPT(ecf_cohort_id,
      ecf_school_id)
  FROM
    ecf_school_cohorts
  LEFT JOIN
    ecf_cohorts
  ON
    ecf_school_cohorts.cohort_id=ecf_cohorts.ecf_cohort_id
  LEFT JOIN
    ecf_schools_latest
  ON
    ecf_school_cohorts.school_id=ecf_schools_latest.ecf_school_id)
SELECT
  *
FROM
  ecf_full_schools
